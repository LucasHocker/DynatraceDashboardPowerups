{
    "manifest_version": 2, 
    "name": "Dynatrace Dashboard Powerups",
    "description": "Hack existing dashboards for cool features",
    "version": "0.2",
    "author": "Lucas Hocker",

    "browser_action": {
        "default_icon": {
                "16": "Assets/powerup.png",
                "48": "Assets/powerup.png",
                "128": "Assets/powerup.png"
            },
            "default_popup": "popup.html"
    },

    "icons": {
        "16": "Assets/powerup.png",
        "48": "Assets/powerup.png",
        "128": "Assets/powerup.png"
    },

    "content_scripts":[{
        "run_at": "document_end",
        "js" : [
            "3rdParty/jquery-3.5.1.min.js",
            "powerup.js"
        ],
        "css": [
            "powerup.css"
        ],
        "matches":[
            "https://*.live.dynatrace.com/*",
            "https://*/e/*/*",
            "https://*.sprint.dynatracelabs.com/*",
            "https://*.dev.dynatracelabs.com/*"
        ]
    }],

    "web_accessible_resources": [
        "powerup.js",
        "powerup.css",
        "3rdParty/barista-icons/*",
        "tooltips.js"
    ],

    "permissions": [
      "declarativeContent",
      "activeTab"
    ]
}