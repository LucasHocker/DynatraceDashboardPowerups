{
    "manifest_version": 2,
    "name": "Dynatrace Dashboard Powerups",
    "description": "Power-up existing dashboards with cool experimental features",
    "version": "1.25",
    "author": "Lucas Hocker",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_icon": "Assets/powerup_gray.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "Assets/powerup.png",
        "48": "Assets/powerup.png",
        "128": "Assets/powerup.png"
    },
    "web_accessible_resources": [
        "powerup.css",
        "3rdParty/node_modules/@dynatrace/barista-icons/*",
        "clientside.*js*",
        "3rdParty/Highcharts/modules/6.2.0/*",
        "3rdParty/Highcharts/lib/*",
        "3rdParty/node_modules/@iconfu/svg-inject/dist/*",
        "3rdParty/D3/*",
        "3rdParty/node_modules/math-expression-evaluator/dist/browser/*",
        "3rdParty/date_fns.min.js*"
    ],
    "permissions": [
        "webNavigation",
        "activeTab",
        "storage",
        "https://*.live.dynatrace.com/*",
        "https://*/e/*",
        "https://*.sprint.dynatracelabs.com/*",
        "https://*.dev.dynatracelabs.com/*"
    ]
}
